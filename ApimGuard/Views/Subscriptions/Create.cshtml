@model ApimGuard.Models.SubscriptionInfo

@{
    ViewData["Title"] = "Create Subscription";
}

<h1>Create New Subscription</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post">
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="subscription-name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DisplayName" class="form-label"></label>
                <input asp-for="DisplayName" class="form-control" placeholder="Subscription Display Name" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Scope" class="form-label"></label>
                <input asp-for="Scope" class="form-control" placeholder="/apis/api-name" />
                <span asp-validation-for="Scope" class="text-danger"></span>
                <small class="form-text text-muted">Enter the scope path (e.g., /apis/api-name or /products/product-name)</small>
            </div>

            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
