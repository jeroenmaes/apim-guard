@model ApimGuard.Models.SubscriptionInfo

@{
    ViewData["Title"] = "Delete Subscription";
}

<h1>Delete Subscription</h1>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this subscription?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Display Name</dt>
            <dd class="col-sm-9">@Model.DisplayName</dd>

            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Scope</dt>
            <dd class="col-sm-9">@Model.Scope</dd>

            <dt class="col-sm-3">State</dt>
            <dd class="col-sm-9">
                <span class="badge bg-@(Model.State == "active" ? "success" : "secondary")">
                    @Model.State
                </span>
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
