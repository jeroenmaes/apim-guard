@model ApimGuard.Models.SubscriptionInfo

@{
    ViewData["Title"] = "Subscription Details";
}

<h1>Subscription Details</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.DisplayName</h5>
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Scope</dt>
            <dd class="col-sm-9">@Model.Scope</dd>

            <dt class="col-sm-3">State</dt>
            <dd class="col-sm-9">
                <span class="badge bg-@(Model.State == "active" ? "success" : "secondary")">
                    @Model.State
                </span>
            </dd>

            <dt class="col-sm-3">Created Date</dt>
            <dd class="col-sm-9">@Model.CreatedDate?.ToString("yyyy-MM-dd HH:mm:ss")</dd>

            <dt class="col-sm-3">Expiration Date</dt>
            <dd class="col-sm-9">@(Model.ExpirationDate?.ToString("yyyy-MM-dd HH:mm:ss") ?? "N/A")</dd>
        </dl>
    </div>
</div>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">Access Keys</h5>
        <div class="mb-3">
            <label class="form-label"><strong>Primary Key:</strong></label>
            <div class="input-group">
                <input type="password" class="form-control" id="primaryKey" value="@Model.PrimaryKey" readonly />
                <button class="btn btn-outline-secondary" type="button" onclick="toggleKeyVisibility('primaryKey', this)" title="Toggle visibility">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                        <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"/>
                        <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0"/>
                    </svg>
                </button>
                <form asp-action="RegenerateKey" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <input type="hidden" name="keyType" value="primary" />
                    <button type="submit" class="btn btn-warning">Regenerate</button>
                </form>
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label"><strong>Secondary Key:</strong></label>
            <div class="input-group">
                <input type="password" class="form-control" id="secondaryKey" value="@Model.SecondaryKey" readonly />
                <button class="btn btn-outline-secondary" type="button" onclick="toggleKeyVisibility('secondaryKey', this)" title="Toggle visibility">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                        <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"/>
                        <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0"/>
                    </svg>
                </button>
                <form asp-action="RegenerateKey" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <input type="hidden" name="keyType" value="secondary" />
                    <button type="submit" class="btn btn-warning">Regenerate</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    <script>
        function toggleKeyVisibility(inputId, button) {
            const input = document.getElementById(inputId);
            const icon = button.querySelector('svg');
            
            if (input.type === 'password') {
                input.type = 'text';
                // Change to eye-slash icon
                icon.innerHTML = '<path d="M13.359 11.238C15.06 9.72 16 8 16 8s-3-5.5-8-5.5a7 7 0 0 0-2.79.588l.77.771A6 6 0 0 1 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755q-.247.248-.517.486z"/>' +
                    '<path d="M11.297 9.176a3.5 3.5 0 0 0-4.474-4.474l.823.823a2.5 2.5 0 0 1 2.829 2.829zm-2.943 1.299.822.822a3.5 3.5 0 0 1-4.474-4.474l.823.823a2.5 2.5 0 0 0 2.829 2.829"/>' +
                    '<path d="M3.35 5.47q-.27.24-.518.487A13 13 0 0 0 1.172 8l.195.288c.335.48.83 1.12 1.465 1.755C4.121 11.332 5.881 12.5 8 12.5c.716 0 1.39-.133 2.02-.36l.77.772A7 7 0 0 1 8 13.5C3 13.5 0 8 0 8s.939-1.721 2.641-3.238l.708.709zm10.296 8.884-12-12 .708-.708 12 12z"/>';
            } else {
                input.type = 'password';
                // Change back to eye icon
                icon.innerHTML = '<path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"/>' +
                    '<path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0"/>';
            }
        }
    </script>
}
