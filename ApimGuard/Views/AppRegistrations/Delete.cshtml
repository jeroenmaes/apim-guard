@model ApimGuard.Models.AppRegistrationInfo

@{
    ViewData["Title"] = "Delete App Registration";
}

<h1>Delete App Registration</h1>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this app registration?</h4>
    <p>This action cannot be undone. All associated secrets and certificates will also be deleted.</p>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Display Name</dt>
            <dd class="col-sm-9">@Model.DisplayName</dd>

            <dt class="col-sm-3">Application ID</dt>
            <dd class="col-sm-9"><code>@Model.AppId</code></dd>

            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
