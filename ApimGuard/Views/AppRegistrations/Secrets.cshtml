@model IEnumerable<ApimGuard.Models.AppSecretInfo>

@{
    ViewData["Title"] = "Manage Secrets";
    var appId = ViewBag.AppId;
}

<h1>Manage Secrets</h1>
<p>Manage client secrets for this app registration</p>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">Add New Secret</h5>
        <form asp-action="AddSecret" method="post" class="row g-3">
            <input type="hidden" name="appId" value="@appId" />
            <div class="col-md-6">
                <label for="displayName" class="form-label">Display Name</label>
                <input type="text" class="form-control" id="displayName" name="displayName" required placeholder="Production Secret" />
            </div>
            <div class="col-md-4">
                <label for="validityMonths" class="form-label">Valid For (months)</label>
                <select class="form-select" id="validityMonths" name="validityMonths">
                    <option value="6">6 months</option>
                    <option value="12">12 months</option>
                    <option value="24">24 months</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Add Secret</button>
            </div>
        </form>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Display Name</th>
            <th>ID</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var secret in Model)
        {
            var isExpired = secret.EndDateTime.HasValue && secret.EndDateTime.Value < DateTime.UtcNow;
            var isExpiringSoon = secret.EndDateTime.HasValue && secret.EndDateTime.Value < DateTime.UtcNow.AddDays(30);
            
            <tr>
                <td>@secret.DisplayName</td>
                <td><code>@secret.Id</code></td>
                <td>@secret.StartDateTime?.ToString("yyyy-MM-dd")</td>
                <td>@secret.EndDateTime?.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (isExpired)
                    {
                        <span class="badge bg-danger">Expired</span>
                    }
                    else if (isExpiringSoon)
                    {
                        <span class="badge bg-warning">Expiring Soon</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Valid</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <p>No secrets configured. Add a new secret above to get started.</p>
    </div>
}

<div class="alert alert-warning">
    <strong>Note:</strong> Secret values are only shown once at creation time. Make sure to save them securely.
</div>

<div class="mt-3">
    <a asp-action="Details" asp-route-id="@appId" class="btn btn-secondary">Back to Details</a>
</div>
