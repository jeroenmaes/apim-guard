@model ApimGuard.Models.AppRegistrationInfo

@{
    ViewData["Title"] = "Create App Registration";
}

<h1>Create New App Registration</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post">
            <div class="form-group mb-3">
                <label asp-for="DisplayName" class="form-label"></label>
                <input asp-for="DisplayName" class="form-control" placeholder="My Application" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
                <small class="form-text text-muted">A friendly name for your application</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Type" class="form-label">Application Type</label>
                <select asp-for="Type" class="form-control" id="appType">
                    <option value="@ApimGuard.Models.AppRegistrationType.None">None (Basic App Registration)</option>
                    <option value="@ApimGuard.Models.AppRegistrationType.BackendApi">Backend API</option>
                    <option value="@ApimGuard.Models.AppRegistrationType.ConsumerApi">Consumer API</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
                <small class="form-text text-muted">Select the type of app registration for API Management</small>
            </div>

            <div id="consumerApiFields" class="card mb-3" style="display: none;">
                <div class="card-body">
                    <h6 class="card-title">Consumer API Configuration</h6>
                    <div class="form-group mb-3">
                        <label asp-for="ApiPermissionClientId" class="form-label">Application Client ID</label>
                        <input asp-for="ApiPermissionClientId" class="form-control" placeholder="00000000-0000-0000-0000-000000000000" />
                        <span asp-validation-for="ApiPermissionClientId" class="text-danger"></span>
                        <small class="form-text text-muted">The Client ID of the Backend API to grant permissions to</small>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ApiPermissionAppRole" class="form-label">App Role</label>
                        <input asp-for="ApiPermissionAppRole" class="form-control" placeholder="API.Access" />
                        <span asp-validation-for="ApiPermissionAppRole" class="text-danger"></span>
                        <small class="form-text text-muted">The App Role to request (e.g., API.Access)</small>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const appTypeSelect = document.getElementById('appType');
            const consumerApiFields = document.getElementById('consumerApiFields');

            function toggleConsumerApiFields() {
                if (appTypeSelect.value === '@((int)ApimGuard.Models.AppRegistrationType.ConsumerApi)') {
                    consumerApiFields.style.display = 'block';
                } else {
                    consumerApiFields.style.display = 'none';
                }
            }

            appTypeSelect.addEventListener('change', toggleConsumerApiFields);
            toggleConsumerApiFields();
        });
    </script>
}
