@model ApimGuard.Models.ProductInfo

@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this product?</h4>
    <p>This action cannot be undone and will delete all associated subscriptions.</p>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Display Name</dt>
            <dd class="col-sm-9">@Model.DisplayName</dd>

            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">State</dt>
            <dd class="col-sm-9">@Model.State</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
