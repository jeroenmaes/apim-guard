@model ApimGuard.Models.ProductInfo

@{
    ViewData["Title"] = "Product Details";
}

<h1>Product Details</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.DisplayName</h5>
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@(Model.Description ?? "N/A")</dd>

            <dt class="col-sm-3">State</dt>
            <dd class="col-sm-9">
                @if (Model.State == "Published")
                {
                    <span class="badge bg-success">@Model.State</span>
                }
                else
                {
                    <span class="badge bg-secondary">@Model.State</span>
                }
            </dd>

            <dt class="col-sm-3">Subscription Required</dt>
            <dd class="col-sm-9">
                @if (Model.SubscriptionRequired)
                {
                    <span class="badge bg-warning text-dark">Yes</span>
                }
                else
                {
                    <span class="badge bg-secondary">No</span>
                }
            </dd>

            <dt class="col-sm-3">Approval Required</dt>
            <dd class="col-sm-9">
                @if (Model.ApprovalRequired)
                {
                    <span class="badge bg-info">Yes</span>
                }
                else
                {
                    <span class="badge bg-secondary">No</span>
                }
            </dd>

            <dt class="col-sm-3">Subscriptions Limit</dt>
            <dd class="col-sm-9">@(Model.SubscriptionsLimit?.ToString() ?? "Unlimited")</dd>

            <dt class="col-sm-3">Terms</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Terms))
                {
                    <div class="border p-2 bg-light">
                        @Model.Terms
                    </div>
                }
                else
                {
                    <text>N/A</text>
                }
            </dd>
        </dl>
    </div>
</div>

@{
    var linkedApis = ViewBag.LinkedApis as List<ApimGuard.Models.ApiInfo>;
}

@if (linkedApis != null && linkedApis.Count > 0)
{
    <div class="card mt-3">
        <div class="card-body">
            <h5 class="card-title">Linked APIs</h5>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Display Name</th>
                            <th>Path</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var api in linkedApis)
                        {
                            <tr>
                                <td>@api.Name</td>
                                <td>@api.DisplayName</td>
                                <td><code>@api.Path</code></td>
                                <td>@(api.Description ?? "N/A")</td>
                                <td>
                                    <a asp-controller="ApiManagement" asp-action="Details" asp-route-id="@api.Id" class="btn btn-sm btn-primary">View Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info mt-3">
        <i class="bi bi-info-circle"></i> No APIs are currently linked to this product.
    </div>
}

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
</div>
