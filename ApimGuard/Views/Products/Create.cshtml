@model ApimGuard.Models.ProductInfo

@{
    ViewData["Title"] = "Create Product";
}

<h1>Create New Product</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post">
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="product-name" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <small class="form-text text-muted">Unique identifier for the product</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DisplayName" class="form-label"></label>
                <input asp-for="DisplayName" class="form-control" placeholder="Product Display Name" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="State" class="form-label"></label>
                <select asp-for="State" class="form-control">
                    <option value="">Select State</option>
                    <option value="NotPublished">Not Published</option>
                    <option value="Published">Published</option>
                </select>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="SubscriptionRequired" class="form-check-input" type="checkbox" />
                <label asp-for="SubscriptionRequired" class="form-check-label"></label>
            </div>

            <div class="form-check mb-3">
                <input asp-for="ApprovalRequired" class="form-check-input" type="checkbox" />
                <label asp-for="ApprovalRequired" class="form-check-label"></label>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SubscriptionsLimit" class="form-label"></label>
                <input asp-for="SubscriptionsLimit" class="form-control" type="number" placeholder="Leave empty for unlimited" />
                <span asp-validation-for="SubscriptionsLimit" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Terms" class="form-label"></label>
                <textarea asp-for="Terms" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Terms" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
